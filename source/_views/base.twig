<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    {% if page.full_title %}
    <title>{{ page.full_title }}</title>
    {% else %}
    <title>{{ page.title }} &mdash; {{ site.title }}</title>
    {% endif %}
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="{{ site.url }}/css/boilerplate.css">
    <link rel="stylesheet" href="{{ site.url }}/css/style.css">
    <link rel="stylesheet" href="{{ site.url }}/css/helpers.css">
    <link rel="stylesheet" href="{{ site.url }}/css/font-awesome.css">
    <link rel="icon" href="{{ site.url }}/favicon.ico">
    <script src="{{ site.url }}/js/libs/modernizr-2.0.6.min.js"></script>
</head>
<body>
    <a href="http://github.com/dflydev" class="forkMeOnGithub"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png" alt="Fork me on GitHub"></a>
    <div class="mainContent">
    {% block content %}Fallback content.{% endblock %}
    </div>
    <footer class="site">
    {% block footer %}
    &copy;Dragonfly Development Inc, 2009-2012
    {% endblock %}
    </footer>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{site.url}}/js/libs/jquery-1.6.4.min.js"><\/script>')</script>
    <script defer src="{{ site.url }}/js/plugins.js"></script>
    <script defer src="{{ site.url }}/js/script.js"></script>
    {% if site.google_analytics_tracking_id %}
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '{{  site.google_analytics_tracking_id }}']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
    {% endif %}
</body>
</html>
